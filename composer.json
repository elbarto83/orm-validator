{
	"name": "ellipsesynergie/orm-validator",
	"description": "Self-validating, secure and smart models for Laravel 4's Eloquent ORM using Model Observer and advanced Validation service combined with the Laravel's built-in Validator class.",
	"keywords": ["validation", "laravel", "framework", "eloquent", "database", "sql", "orm", "activerecord", "active record"],
	"authors": [
		{
			"name": "Maxime Beaudoin",
			"email": "maxime.beaudoin@ellipse-synergie.com"
		}
	],
	"require": {
		"php": ">=5.3.0"
	},
	"require-dev": {
		"mockery/mockery": "0.7.2",
		"phpunit/phpunit": "3.7.*",
		"illuminate/database": "4.0.x",
		"illuminate/validation": "4.0.x"
	},
	"autoload": {
		"classmap": [
			"src/EllipseSynergie/OrmValidator/Exceptions.php"
		],
		"psr-0": {
			"EllipseSynergie\\OrmValidator": "src/"
		}
	},
	"minimum-stability": "dev"
}	